@model IEnumerable<PetZen.Models.PetListItem>

@{
    ViewBag.Title = "Pets";
}

<html>
<head>
    @Styles.Render("~/Content/IndexStyle.css")
</head>

<body>
    <div class="container-fluid wrapper">


        @if (TempData.ContainsKey("SaveResult"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
                @TempData["SaveResult"]
            </div>
        }
        <br />
        <br />
        <div class="card containter-fluid" style="width: 70%;">

            <h2>All Pets</h2>
            <p>
                <input type="button" class="btn btn-secondary" value="Add Pet" onclick="window.location.href='/Pet/Create'" />
            </p>

            <div class="card-deck justify-content-center">
                @foreach (var pet in Model)
                {
                    <div class="row justify-content-center card-row">
                        <div class="card p-2" style="        width: 20rem;
                            background-color: #FAF9F9;">
                            <div class="card-img-top">
                                <img src="~/Content/Images/heart on grey 140.svg" />
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">@Html.DisplayFor(model => pet.Name)</h4>
                                <p>@Html.DisplayNameFor(Model => Model.Species):   @Html.DisplayFor(modelItem => pet.Species)  </p>
                                <p>@Html.DisplayNameFor(model => model.Breed): @Html.DisplayFor(modelItem => pet.Breed) </p>
                                <p> @Html.DisplayNameFor(model => model.Weight)   @Html.DisplayFor(modelItem => pet.Weight) </p>
                                <p>@Html.DisplayNameFor(model => model.MealsPerDay)  @Html.DisplayFor(modelItem => pet.MealsPerDay)</p>
                                <p>@Html.DisplayNameFor(model => model.MedAdminsPerDay)   @Html.DisplayFor(modelItem => pet.MedAdminsPerDay)</p>
                                <p>@Html.ActionLink("Edit", "Edit", new { id = pet.PetId }) |                                                                                                               @Html.ActionLink("Details", "Details", new { id = pet.PetId }) |                                                                                                        @Html.ActionLink("Delete", "Delete", new { id = pet.PetId })

                            </div>

                        </div>
                    </div>
                }

            </div>

            <br />
            <br />
        </div>
    </div>
               
</body>
</html>