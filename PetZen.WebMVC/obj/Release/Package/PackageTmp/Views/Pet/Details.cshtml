@model PetZen.Models.PetModels.PetDetail

@{
    ViewBag.Title = "Details";
}

<h2>Pet Details</h2>

<html>
<head>
    @Styles.Render("~/Content/IndexStyle.css")
</head>

<body>
    <div class="container-fluid wrapper">
        <hr />
        <hr />
        <div class="card containter-fluid" style="width: 70%;">
            <div>
                <h4>Pet Detail</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.PetId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PetId)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Species)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Species)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Breed)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Breed)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Weight)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Weight)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </dt>

                    <dd>
                        @if (Model.DateOfBirth != null)
                        {
                            @Html.DisplayFor(model => model.DateOfBirth)
                        }

                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MealsPerDay)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MealsPerDay)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MedAdminsPerDay)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MedAdminsPerDay)
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.PetId }) |
                @Html.ActionLink("PetFeedings", "PetFeedings", new {  id=Model.PetId  })
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
        <hr />
        <hr />
    </div>
</body>
</html>