@model IEnumerable<PetZen.Models.PetModels.DailyPet>

@{
    ViewBag.Title = "Home Page";
}

<html>
<head>

    
    @Styles.Render("~/Content/Site.css")
    
</head>

<body>
    <div class="container-fluid text-center wrapper">

        <div class="jumbotron">
            <div class="contianer-fluid">
                <div class="row justify-content-center">

                    <div class="col-md-1">
                        <img src="~/Content/Images/pink heart on grey 100.svg" />
                    </div>

                    <div class="col-md-2">

                        <h1>Our Daily Pet Routines</h1>

                    </div>
                    <div class="col-md-1">
                        <img src="~/Content/Images/pink heart on grey 100.svg" />
                    </div>

                </div>
            </div>

        </div>

        <div class="card-deck justify-content-center">
            @foreach (var animal in Model)
            {
                string species = animal.Species.ToString();

                <div class="row justify-content-center card-row">

                    <div class="card p-2" style="width:20rem;">
                        @switch (species)
                        {
                            case "Dog":
                                <div class="card-img-top">
                                    <img src="~/Content/Images/dog heather 140.svg">
                                </div>
                                break;
                            case "Cat":
                                <div class="card-img-top">
                                    <img src="~/Content/Images/cat rose 140 .svg" />
                                </div>
                                break;
                            case "Rabbit":
                                <div class="card-img-top">
                                    <img src="~/Content/Images/rabit lavender 140.svg" />
                                </div>
                                break;
                            case "Hamster":
                                <div class="card-img-top">
                                    <img src="~/Content/Images/rodent rose 140.svg" />
                                </div>
                                break;
                            case "Chinchilla":
                                <div class="card-img-top">
                                    <img src="~/Content/Images/rodent rose 140.svg" />
                                </div>
                                break;
                            case "Bird":
                                <div class="card-img-top">
                                    <img src="~/Content/Images/Bird on green 140.svg" />
                                </div>
                                break;
                            case "Reptile":
                                <div class="card-img-top">
                                    <img src="~/Content/Images/lizard on grey 140.svg" />
                                </div>
                                break;
                            default:
                                <div class="card-img-top">
                                    <img src="~/Content/Images/heart on grey 140.svg" />
                                </div>
                                break;
                        }

                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(model => animal.Name)</h4>

                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#pet@(animal.PetId)">@Html.DisplayFor(model => animal.Name)'s Daily Info</button>

                        <!--Modal-->
                        <div id="pet@(animal.PetId)" class="modal fade" tabindex="-1" role='dialog' aria-labelledby="petModalLabel" aria-hidden="false">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="petModalLabel">@(Html.DisplayFor(model => animal.Name))</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    </div>
                                    <div class="modal-body" id="modal-body">
                                        <p>@(Html.DisplayFor(model => animal.Name)) has @(Html.DisplayFor(model => animal.MealsPerDay)) meals each day.</p>
                                        <p>@(Html.DisplayFor(model => animal.Name)) needs @(Html.DisplayFor(model => animal.MedAdminsPerDay)) medication doses each day.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="button" class="btn btn-secondary" value="Feed @(Html.DisplayFor(model => animal.Name))" onclick="window.location.href='/Feeding/Create'"/>
                                        <input type="button" class="btn btn-secondary" value="Medicate @(Html.DisplayFor(model => animal.Name))" onclick="window.location.href='/Administration/Create'" />
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End of Modal-->
                    </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

